<c:FragmentDefinition
    id="BOMOutput"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <TableSelectDialog
        id="idBOMDialog"
        class="sapUiResponsiveMargin"
        noDataText="No BOM Found"
        growing="true"
        title="Display BOM"
        cancel=".onDialogClose"
        items="{BOMModel>/BOMData}"
        contentWidth="50%"
        contentHeight="auto"
        search="onBOMDataTableSelectDialogSearch"
        liveChange="onBOMDataTableSelectDialogSearch"
    >
        <columns>
            <Column
                width="auto"
                minScreenWidth="Desktop"
                visible="false"
            >
                <header>
                    <Text text="{i18n>ItemNo}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="Begin"
            >
                <header>
                    <Text text="{i18n>Component}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="Begin"
            >
                <header>
                    <Text text="{i18n>ComponentDescr}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>OperNo}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="Begin"
            >
                <header>
                    <Text text="{i18n>BatchOnly}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="Center"
            >
                <header>
                    <Text text="{i18n>ReqQty}" />
                </header>
            </Column>
            <Column hAlign="End">
                <header>
                    <Text text="{i18n>QtyWdrwn}" />
                </header>
            </Column>
        </columns>
        <ColumnListItem vAlign="Middle">
            <cells>
                <ObjectIdentifier
                    title="{BOMModel>Data03}"
                    visible="false"
                />
                <ObjectIdentifier title="{BOMModel>Data04}" />
                <ObjectIdentifier title="{BOMModel>Data05}" />
                <ObjectIdentifier title="{BOMModel>Data02}" />
                <ObjectIdentifier title="{BOMModel>Data08}" />
                <ObjectNumber
                    number="{BOMModel>Data09}"
                    unit="{BOMModel>Data10}"
                    state="{
                        path: 'WeightMeasure',
                        formatter: 'sap.m.sample.TableSelectDialog.Formatter.weightState'
                    }"
                />
                <ObjectNumber
                    number="{BOMModel>Data11}"
                    unit="{BOMModel>Data10}"
                    state="{
                        path: 'WeightMeasure',
                        formatter: 'sap.m.sample.TableSelectDialog.Formatter.weightState'
                    }"
                />
            </cells>
        </ColumnListItem>
    </TableSelectDialog>
</c:FragmentDefinition>
