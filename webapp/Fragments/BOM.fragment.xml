<c:FragmentDefinition
    id="BOMOutput"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <TableSelectDialog
        id="idBOMDialog"
        noDataText="No BOM Found"
        growing="true"
        title="Display BOM"
        cancel=".onDialogClose"
        items="{BOMModel>/BOMData}"
        contentWidth="750px"
        contentHeight="800px"
    >
        <columns>
            <Column width="auto">
                <header>
                    <Text text="{i18n>ItemNo}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>OperNo}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="End"
            >
                <header>
                    <Text text="{i18n>ComponentDetail}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="End"
            >
                <header>
                    <Text text="{i18n>BatchOnly}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="Center"
            >
                <header>
                    <Text text="{i18n>ReqQty}" />
                </header>
            </Column>
            <Column hAlign="End">
                <header>
                    <Text text="{i18n>QtyWdrwn}" />
                </header>
            </Column>
        </columns>
        <ColumnListItem vAlign="Middle">
            <cells>
                <ObjectIdentifier title="{BOMModel>Data03}" />
                <ObjectIdentifier title="{BOMModel>Data02}" />
                <ObjectIdentifier
                    title="{BOMModel>Data04}"
                    text="{BOMModel>Data05}"
                />
                <ObjectIdentifier title="{BOMModel>Data08}" />
                <ObjectNumber
                    number="{BOMModel>Data09}"
                    unit="{BOMModel>Data10}"
                    state="{
                        path: 'WeightMeasure',
                        formatter: 'sap.m.sample.TableSelectDialog.Formatter.weightState'
                    }"
                />
                <ObjectNumber
                    number="{BOMModel>Data11}"
                    unit="{BOMModel>Data10}"
                    state="{
                        path: 'WeightMeasure',
                        formatter: 'sap.m.sample.TableSelectDialog.Formatter.weightState'
                    }"
                />
            </cells>
        </ColumnListItem>
    </TableSelectDialog>
</c:FragmentDefinition>
