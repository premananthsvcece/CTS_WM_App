<c:FragmentDefinition
    id="idPostAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    autoFocus="false"
>
    <Dialog
        id="idDialogPost"
        title="{i18n>PostAction}"
        contentWidth="60%"
    >
        <l:VerticalLayout
            id="idVerticalLayoutPost"
            class="sapUiContentPadding"
            width="auto"
        >
            <l:content>
                <IconTabBar
                    id="idIconTabBarMulti"
                    expanded="{device>/isNoPhone}"
                    class="sapUiResponsiveContentPadding"
                >
                    <items>
                        <IconTabFilter
                            key="Postinfo"
                            text="{i18n>PostInfo}"
                        >
                            <List
                                id="idPostList"
                                class="sapUiContentPadding"
                                headerText="{i18n>StartAction}"
                                showSeparators="None"
                            >
                                <InputListItem label="{i18n>OprDetails}">
                                    <Input
                                        id="idPostOperator"
                                        placeholder="Operator No"
                                        type="Text"
                                        enabled="false"
                                        width="15rem"
                                    />
                                </InputListItem>
                                <InputListItem label="{i18n>Plant}">
                                    <Input
                                        id="idSelectPostPlant"
                                        type="Text"
                                        enabled="false"
                                        width="15rem"
                                    />
                                </InputListItem>
                                <InputListItem label="{i18n>PostQuan} *" >
                                    <Input
                                        id="idPostQuantity"
                                        type="Number"
                                        required="true"
                                        change="onPostQuantityChange"
                                        width="15rem"
                                        value="{
                                            type: 'sap.ui.model.odata.type.Decimal'
                                        }"
                                    />
                                </InputListItem>
                                <InputListItem label="{i18n>TotalTime}">
                                    <Input
                                        id="idPostTotalTime"
                                        type="Number"
                                        change="onPostTotalChange"
                                        enabled="false"
                                        width="15rem"
                                        value="{
                                            type: 'sap.ui.model.odata.type.Decimal'
                                        }"
                                    />
                                </InputListItem>
                                <InputListItem label="{i18n>SetupTime}">
                                    <Input
                                        id="idPostSetupTIme"
                                        type="Number"
                                        change="onPostSetupChange"
                                        width="15rem"
                                        value="{
                                            type: 'sap.ui.model.odata.type.Decimal'
                                        }"
                                    />
                                </InputListItem>
                            </List>
                            <Table
                                id="idPostScarpList"
                                class="sapUiContentPadding"
                                headerText="{i18n>ScarpDetail}"
                                items="{PostScarpModel>/PostScarpData}"
                                showSeparators="None"
                            >
                                <columns>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>Orddet}" />
                                    </Column>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>ScarpType}" />
                                    </Column>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>ScarpQuan}" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <ObjectIdentifier
                                                title="{PostScarpModel>Data01}"
                                                text="{i18n>OperNo} : {PostScarpModel>Data02} User: {PostScarpModel>Data04}"
                                            />
                                            <ObjectIdentifier
                                                title="{PostScarpModel>Data06}"
                                                text="{PostScarpModel>Data07}"
                                            />
                                            <ObjectNumber
                                                number="{PostScarpModel>Data05}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                            <Table
                                id="idPostComponentList"
                                class="sapUiContentPadding"
                                items="{ComponentModel>/ComponentData}"
                                showSeparators="None"
                            >
                                <columns>
                                    <Column
                                        demandPopin="true"
                                        width="30%"
                                    >
                                        <Text text="{i18n>Component}" />
                                    </Column>
                                    <Column
                                        demandPopin="true"
                                        width="10%"
                                    >
                                        <Text text="{i18n>Plant}" />
                                    </Column>
                                    <Column
                                        demandPopin="true"
                                        width="10%"
                                    >
                                        <Text text="{i18n>Location}" />
                                    </Column>
                                    <Column
                                        demandPopin="true"
                                        width="10%"
                                    >
                                        <Text text="{i18n>MovementType}" />
                                    </Column>
                                    <Column
                                        demandPopin="true"
                                        width="15%"
                                    >
                                        <Label text="{i18n>BatchOnly} *" />
                                    </Column>
                                    <Column
                                        demandPopin="true"
                                        width="25%"
                                    >
                                        <Label text="{i18n>RequriedQuan} *" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <ObjectIdentifier
                                                title="{ComponentModel>Data01}"
                                                text="{ComponentModel>Data02}"
                                            />
                                            <ObjectIdentifier
                                                title="{ComponentModel>Data03}"
                                            />
                                            <ObjectIdentifier
                                                title="{ComponentModel>Data04}"
                                            />
                                            <ObjectIdentifier
                                                title="{ComponentModel>Data08}"
                                            />
                                            <Input
                                                value="{ComponentModel>Data05}"
                                                valueHelpRequest="onBatchHelpRequest"
                                                showValueHelp="true"
                                            />
                                            <Input
                                                value="{ComponentModel>Data06}"
                                                description="{ComponentModel>Data07}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </IconTabFilter>
                        <IconTabFilter
                            key="Activity"
                            text="{i18n>ActivityInfo}"
                        >
                            <Table
                                id="idPostActivityList"
                                class="sapUiContentPadding"
                                headerText="{i18n>ActivityDetails}"
                                items="{ActivityModel>/ActivityData}"
                            >
                                <columns>
                                    <Column
                                        demandPopin="true"
                                        width="15%"
                                    >
                                        <Text text="{i18n>ProdOrdNo}" />
                                    </Column>
                                    <Column
                                        demandPopin="true"
                                        width="10%"
                                    >
                                        <Text text="{i18n>OprNo}" />
                                    </Column>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>OperStrtDate}" />
                                    </Column>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>OperStrtTime}" />
                                    </Column>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>OperEndDate}" />
                                    </Column>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>OperEndTime}" />
                                    </Column>
                                    <Column demandPopin="true">
                                        <Text text="{i18n>TotalTime}" />
                                    </Column>
                                </columns>
                                <items>
                                    <ColumnListItem vAlign="Middle">
                                        <cells>
                                            <ObjectIdentifier
                                                title="{ActivityModel>Data01}"
                                            />
                                            <ObjectIdentifier
                                                title="{ActivityModel>Data02}"
                                            />
                                            <DatePicker
                                                value="{ActivityModel>Data03}"
                                                displayFormat="dd/MM/yy"
                                                enabled="false"
                                            />
                                            <TimePicker
                                                value="{ActivityModel>Data04}"
                                                displayFormat="hh:mm:ss"
                                                enabled="false"
                                            />
                                            <DatePicker
                                                value="{ActivityModel>Data05}"
                                                displayFormat="dd/MM/yy"
                                                enabled="false"
                                            />
                                            <TimePicker
                                                value="{ActivityModel>Data06}"
                                                displayFormat="hh:mm:ss"
                                                enabled="false"
                                            />
                                            <Input
                                                value="{ActivityModel>Data07}"
                                                enabled="false"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </l:content>
        </l:VerticalLayout>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    class="sapUiSmallMarginBegin"
                    text="{i18n>Save}"
                    type="Success"
                    press="onConfirmPostPress"
                />
                <Button
                    icon="sap-icon://cancel"
                    class="sapUiSmallMarginBegin"
                    text="{i18n>Cancel}"
                    type="Negative"
                    press="onCancelPostPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
