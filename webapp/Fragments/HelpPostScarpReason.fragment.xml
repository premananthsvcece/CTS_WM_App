<c:FragmentDefinition
    id="HelpScarpReason"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <SelectDialog
        id="idScarpReasonDialog"
        noDataText="No Scarp Reason Found"
        growing="true"
        title="Select Scarp Reason"
        search="_onScarpPostReasonSearch"
        confirm="_ScarpPostReasonSelect"
        cancel="_ScarpPostReasonSelect"
        items="{ScarpReasonModel>/ScarpReasonData}"
    >
        <StandardListItem
            title="{ScarpReasonModel>Data03}"
            description="{ScarpReasonModel>Data04}"
            iconDensityAware="false"
            iconInset="false"
            type="Active"
        />
    </SelectDialog>
</c:FragmentDefinition>
