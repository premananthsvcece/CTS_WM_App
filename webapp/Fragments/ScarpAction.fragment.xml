<c:FragmentDefinition
    id="idScarpAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:uiTable="sap.ui.table"
>
    <Dialog
        id="idDialogScarp"
        contentWidth="30%"
    >
        <l:VerticalLayout
            id="idVerticalLayoutScarp"
            class="sapUiContentPadding"
        >
            <l:content>
                <uiTable:Table
                    id="idScarpList"
                    visibleRowCount="5"
                    visibleRowCountMode="Interactive"
                    class="sapUiContentPadding"
                    rows="{ScarpModel>/ScarpData}"
                    alternateRowColors="true"
                    enableSelectAll="false"
                    selectionBehavior="RowOnly"
                    selectionMode="Single"
                    enableCellFilter="true"
                >
                    <uiTable:extension>
                        <OverflowToolbar>
                            <Title level="H2" />
                            <ToolbarSpacer />
                            <Button
                                text="Add"
                                type="Transparent"
                                press="onScarpCompAdd"
                                icon="sap-icon://add"
                            />
                            <Button
                                text="Copy"
                                type="Transparent"
                                press="onScarpCompCopy"
                                icon="sap-icon://copy"
                                visible="false"
                            />
                            <Button
                                text="Delete"
                                type="Attention"
                                press="onScarpCompDel"
                                icon="sap-icon://delete"
                            />
                        </OverflowToolbar>
                    </uiTable:extension>
                    <uiTable:noData text="{i18n>NoData}" />
                    <uiTable:columns>
                        <uiTable:Column width="20%">
                            <Label text="{i18n>ScarpType} *" />
                            <uiTable:template>
                                <Input
                                    showValueHelp="true"
                                    showSuggestion="true"
                                    valueHelpRequest="onScarpReasonRequest"
                                    value="{ScarpModel>Data06}"
                                    placeholder="Scarp Reason"
                                    change="onidScarpReasonChange"
                                    type="Text"
                                    valueLiveUpdate="false"
                                    required="true"
                                />
                            </uiTable:template>
                        </uiTable:Column>
                        <uiTable:Column width="50%">
                            <Label text="{i18n>Description}" />
                            <uiTable:template>
                                <Text
                                    text="{ScarpModel>Data07}"
                                />
                            </uiTable:template>
                        </uiTable:Column>
                        <uiTable:Column width="20%">
                            <Label text="{i18n>ScarpQuan}" />
                            <uiTable:template>
                                <Input
                                    type="Number"
                                    required="true"
                                    value="{ScarpModel>Data05}"
                                    textAlign="Right"
                                />
                            </uiTable:template>
                        </uiTable:Column>
                    </uiTable:columns>
                </uiTable:Table>
            </l:content>
        </l:VerticalLayout>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Saved}"
                    type="Success"
                    press="onConfirmScarpPress"
                />
                <Button
                    icon="sap-icon://accept"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Save_More}"
                    type="Success"
                    press="onConfirmScarpMorePress"
                    visible="false"
                />
                <Button
                    icon="sap-icon://cancel"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Cancel}"
                    type="Negative"
                    press="onCancelScarpPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
