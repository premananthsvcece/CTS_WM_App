<c:FragmentDefinition
    id="idScarpAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialogScarp"
        title="{i18n>ScarpAction}"
    >
        <l:VerticalLayout
            id="idVerticalLayoutScarp"
            class="sapUiContentPadding"
            width="100%"
        >
            <l:content>
                <List
                    id="idScarpList"
                    class="sapUiContentPadding"
                    showSeparators="None"
                >
                    <InputListItem label="{i18n>ScarpType}">
                        <Input
                            id="idScarpReason"
                            showValueHelp="true"
                            valueHelpRequest="onScarpReasonRequest"
                            placeholder="Scarp Reason"
                            type="Text"
                            width="15rem"
                            required="true"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>ScarpQuan}">
                        <Input
                            id="idScarpQuantity"
                            type="Number"
                            required="true"
                            width="15rem"
                            value="{
                                type: 'sap.ui.model.odata.type.Decimal'
                            }"
                        />
                    </InputListItem>
                </List>
            </l:content>
        </l:VerticalLayout>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Save_Close}"
                    type="Success"
                    press="onConfirmScarpPress"
                />
                <Button
                    icon="sap-icon://accept"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Save_More}"
                    type="Success"
                    press="onConfirmScarpMorePress"
                />
                <Button
                    icon="sap-icon://cancel"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Cancel}"
                    type="Negative"
                    press="onCancelScarpPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
