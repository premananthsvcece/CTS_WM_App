<c:FragmentDefinition
    id="HelpPlant"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <SelectDialog
        id="idPlantDialog"
        noDataText="No Plant Found"
        growing="true"
        title="Select Plant"
        search="_onPlantSearch"
        confirm="_onPlantDialogClose"
        cancel="_onPlantDialogClose"
        items="{PlantModel>/PlantData}"
    >
        <StandardListItem
            title="{PlantModel>Werks}"
            description="{PlantModel>McName1}"
            iconDensityAware="false"
            iconInset="false"
            type="Active"
        />
    </SelectDialog>
</c:FragmentDefinition>
