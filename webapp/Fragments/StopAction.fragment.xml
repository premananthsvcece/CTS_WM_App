<c:FragmentDefinition
    id="idStopAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialogStop"
        title="{i18n>StopAction}"
    >
        <l:VerticalLayout
            id="idVerticalLayoutStop"
            class="sapUiContentPadding"
            width="100%"
        >
            <l:content>
                <List
                    id="idStopList"
                    class="sapUiContentPadding"
                >
                    <InputListItem label="{i18n>OprDetails}">
                        <Input
                            id="idStopOperator"
                            placeholder="Operator No"
                            type="Text"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>FirstName}">
                        <Input
                            id="idStopFName"
                            type="Text"
                            enabled="false"
                            width="15rem"
                            visible="false"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>LastName}">
                        <Input
                            id="idStopLName"
                            type="Text"
                            enabled="false"
                            width="15rem"
                            visible="false"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>Plant}">
                        <Input
                            id="idSelectStopPlant"
                            type="Text"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartDate}">
                        <DatePicker
                            id="idStartEndDate"
                            placeholder="Select Date"
                            class="sapUiSmallMarginBottom"
                            showFooter="false"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartTime}">
                        <TimePicker
                            id="idStartEndTime"
                            placeholder="Select Time"
                            class="sapUiSmallMarginBottom"
                            enabled="false"
                            width="15rem"
                            displayFormat="HH:mm:ss"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StopDate}">
                        <DatePicker
                            id="idStopEndDate"
                            placeholder="Select Date"
                            class="sapUiSmallMarginBottom"
                            showFooter="false"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StopTime}">
                        <TimePicker
                            id="idStopEndTime"
                            placeholder="Select Time"
                            class="sapUiSmallMarginBottom"
                            enabled="false"
                            width="15rem"
                            displayFormat="HH:mm:ss"
                        />
                    </InputListItem>
                </List>
            </l:content>
        </l:VerticalLayout>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    type="Success"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Confirm}"
                    press="onConfirmStopPress"
                />
                <Button
                    icon="sap-icon://cancel"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Cancel}"
                    type="Negative"
                    press="onCancelStopPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
