<c:FragmentDefinition
    id="idStopAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog id="idDialogStop">
        <l:VerticalLayout
            id="idVerticalLayoutStop"
            class="sapUiContentPadding"
            width="100%"
        >
            <l:content>
                <List id="idStopList"
                    headerText="{i18n>StopAction}"
                    class="sapUiContentPadding"
                >
                    <InputListItem label="{i18n>OprDetails}">
                        <Input
                            id="idStopOperator"
                            placeholder="Operator No"
                            type="Text"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>FirstName}">
                        <Input
                        id="idStopFName"
                            type="Text"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>LastName}">
                        <Input
                        id="idStopLName"
                            type="Text"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>Plant}">
                        <Input
                        id="idSelectPlant"
                            type="Text"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartDate}">
                        <DatePicker
                            id="idStartDate"
                            placeholder="Select Date"
                            class="sapUiSmallMarginBottom"
                            showFooter="false"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartTime}" >
                        <TimePicker
                            id="idStartTime"
                            placeholder="Select Time"
                            class="sapUiSmallMarginBottom"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StopDate}">
                        <DatePicker
                            id="idStopDate"
                            placeholder="Select Date"
                            class="sapUiSmallMarginBottom"
                            showFooter="false"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StopTime}" >
                        <TimePicker
                            id="idStopTime"
                            placeholder="Select Time"
                            class="sapUiSmallMarginBottom"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                </List>
            </l:content>
        </l:VerticalLayout>
        <ToolbarSpacer />
        <Button
            icon="sap-icon://accept"
            text="{i18n>Confirm}"
            press="onConfirmStopPress"
        />
        <Button
            icon="sap-icon://cancel"
            text="{i18n>Cancel}"
            press="onCancelStopPress"
        />
    </Dialog>
</c:FragmentDefinition>
