<c:FragmentDefinition
    id="HelpWorkArea"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <SelectDialog
        id="idWorkAreaDialog"
        noDataText="{i18n>NoData}"
        growing="true"
        title="{i18n>WorkCenterArea}"
        search="_onWorkAreaSearch"
        confirm="_WorkAreaSelect"
        cancel="_WorkAreaSelect"
        items="{WorkAreaModel>/WorkAreaData}"
    >
        <StandardListItem
            title="{WorkAreaModel>Data01}"
            description="{WorkAreaModel>Data02}"
            iconDensityAware="false"
            iconInset="false"
            type="Active"
        />
    </SelectDialog>
</c:FragmentDefinition>
