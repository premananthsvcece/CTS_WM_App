<c:FragmentDefinition
    id="RoutingOutput"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <TableSelectDialog
        id="idRoutingDialog"
        noDataText="{i18n>nodataroutefound}"
        growing="true"
        title="{i18n>disproute}"
        cancel=".onDialogClose"
        items="{RoutingModel>/RoutingData}"
        contentWidth="75%"
        contentHeight="60%"
        search="onRoutingDataTableSelectDialogSearch"
        liveChange="onRoutingDataTableSelectDialogSearch"
    >
        <columns>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                width="20%"
            >
                <header>
                    <Text text="{i18n>Activity}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                width="10%"
            >
                <header>
                    <Text text="{i18n>WorkCenter}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="End"
            >
                <header>
                    <Text text="{i18n>OprQty}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="End"
            >
                <header>
                    <Text text="{i18n>TotQty}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="End"
            >
                <header>
                    <Text text="{i18n>CnfScrap}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
                hAlign="End"
            >
                <header>
                    <Text text="{i18n>LbrTime}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>StartDate}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>StartTime}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>EndDate}" />
                </header>
            </Column>
            <Column
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>EndTime}" />
                </header>
            </Column>
        </columns>
        <ColumnListItem vAlign="Middle">
            <cells>
                <ObjectIdentifier title="{RoutingModel>Data02}" text="{RoutingModel>Data04}"/>
                <Text text="{RoutingModel>Data03}" />
                <Text text="{RoutingModel>Data05}" />
                <Text text="{RoutingModel>Data06}" />
                <Text text="{RoutingModel>Data07}" />
                <Text text="{RoutingModel>Data08}" />
                <DatePicker
                    value="{RoutingModel>Data09}"
                    displayFormat="dd/MM/yy"
                    enabled="false"
                />
                <TimePicker
                    value="{RoutingModel>Data10}"
                    displayFormat="hh:mm:ss"
                    enabled="false"
                />
                <DatePicker
                    value="{RoutingModel>Data11}"
                    displayFormat="dd/MM/yy"
                    enabled="false"
                />
                <TimePicker
                    value="{RoutingModel>Data12}"
                    displayFormat="hh:mm:ss"
                    enabled="false"
                />
            </cells>
        </ColumnListItem>
    </TableSelectDialog>
</c:FragmentDefinition>
