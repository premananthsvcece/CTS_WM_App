<c:FragmentDefinition
    id="BatchOutput"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <TableSelectDialog
        id="idBatchDialog"
        noDataText="No Batch Found"
        growing="true"
        title="Display Batch"
        search="onBatchDataDialogSearch"
        liveChange="onBatchDataDialogSearch"
        cancel="onBatchInputClose"
        confirm="onBatchInputChange"
        items="{BatchModel>/BatchData}"
        contentWidth="40%"
        contentHeight="auto"
    >
        <columns>
            <Column width="auto">
                <header>
                    <Text text="{i18n>Component}" />
                </header>
            </Column>
            <Column demandPopin="true">
                <header>
                    <Text text="{i18n>Plant}" />
                </header>
            </Column>
            <Column demandPopin="true">
                <header>
                    <Text text="{i18n>Location}" />
                </header>
            </Column>
            <Column
                demandPopin="true"
            >
                <header>
                    <Text text="{i18n>BatchOnly}" />
                </header>
            </Column>
            <Column
                demandPopin="true"
                hAlign="End"
            >
                <header>
                    <Text text="{i18n>Quantity}" />
                </header>
            </Column>
        </columns>
        <ColumnListItem vAlign="Middle">
            <cells>
                <ObjectIdentifier title="{BatchModel>Data01}" />
                <Text text="{BatchModel>Data02}" />
                <Text text="{BatchModel>Data03}" />
                <Text text="{BatchModel>Data04}" />
                <ObjectNumber
                    number="{BatchModel>Data05}"
                    unit="{BatchModel>Data06}"
                />
            </cells>
        </ColumnListItem>
    </TableSelectDialog>
</c:FragmentDefinition>
