<c:FragmentDefinition
    id="idStartAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog id="idDialogStart">
        <l:VerticalLayout
            id="idVerticalLayoutStart"
            class="sapUiContentPadding"
            width="100%"
        >
            <l:content>
                <List id="idStartList"
                    headerText="{i18n>StartAction}"
                    class="sapUiContentPadding"
                >
                    <InputListItem label="{i18n>OprDetails}">
                        <Input
                            placeholder="Operator No"
                            type="Text"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartDate}">
                        <DatePicker
                            id="idStartDate"
                            placeholder="Select Date"
                            class="sapUiSmallMarginBottom"
                            showFooter="false"
                            enabled="false"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartTime}" >
                        <TimePicker
                            id="idStartTime"
                            placeholder="Select Time"
                            class="sapUiSmallMarginBottom"
                            enabled="false"
                        />
                    </InputListItem>
                </List>
            </l:content>
        </l:VerticalLayout>
        <ToolbarSpacer />
        <Button
            icon="sap-icon://accept"
            text="{i18n>Confirm}"
        />
        <Button
            icon="sap-icon://cancel"
            text="{i18n>Cancel}"
        />
    </Dialog>
</c:FragmentDefinition>
