<c:FragmentDefinition
    id="idStartAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialogStart"
        title="{i18n>StartAction}"
    >
        <l:VerticalLayout
            id="idVerticalLayoutStart"
            class="sapUiContentPadding"
            width="100%"
        >
            <l:content>
                <List
                    id="idStartList"
                    class="sapUiContentPadding"
                >
                    <InputListItem label="{i18n>OprDetails}">
                        <Input
                            id="idStartOperator"
                            placeholder="Operator No"
                            type="Text"
                            change="OnOperatorfill"
                            width="15rem"
                        />
                    </InputListItem>
                    <!-- <InputListItem label="{i18n>FirstName}">
                        <Input
                            id="idStartFName"
                            type="Text"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>LastName}">
                        <Input
                            id="idStartLName"
                            type="Text"
                            width="15rem"
                        />
                    </InputListItem> -->
                    <InputListItem label="{i18n>Plant}">
                        <Input
                            id="idSelectStartPlant"
                            type="Text"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartDate}">
                        <DatePicker
                            id="idStartDate"
                            placeholder="Select Date"
                            class="sapUiSmallMarginBottom"
                            showFooter="false"
                            enabled="false"
                            width="15rem"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartTime}">
                        <TimePicker
                            id="idStartTime"
                            placeholder="Select Time"
                            class="sapUiSmallMarginBottom"
                            enabled="false"
                            width="15rem"
                            displayFormat="HH:mm:ss"
                        />
                    </InputListItem>
                </List>
            </l:content>
        </l:VerticalLayout>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    type="Success"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Confirm}"
                    press="onConfirmStartPress"
                />
                <Button
                    icon="sap-icon://cancel"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Cancel}"
                    type="Negative"
                    press="onCancelStartPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
