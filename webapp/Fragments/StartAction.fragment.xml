<c:FragmentDefinition
    id="idStartAction"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialogStart"
        class="sapUiResponsiveMargin"
        showHeader="false"
    >
        <l:VerticalLayout
            id="idVerticalLayoutStart"
            class="sapUiContentPadding"
            width="100%"
        >
            <l:content>
                <Text id="idStartText" visible="false" />
                <List
                    id="idStartList"
                    class="sapUiContentPadding"
                    showSeparators="None"
                >
                    <InputListItem label="{i18n>OprDetails} *">
                        <Input id="idSelectOrder" visible="false" />
                        <Input id="idSelectOprNo" visible="false" />
                        <Input
                            id="idStartOperator"
                            placeholder="Operator No"
                            type="Text"
                            change="OnOperatorfill"
                            width="15rem"
                            showValueStateMessage="true"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>FirstName}" visible="false">
                        <Input
                            id="idStartFName"
                            type="Text"
                            width="15rem"
                            visible="false"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>LastName}" visible="false">
                        <Input
                            id="idStartLName"
                            type="Text"
                            width="15rem"
                            visible="false"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>Plant}" visible="false">
                        <Input
                            id="idSelectStartPlant"
                            type="Text"
                            width="15rem"
                            visible="false"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartDate}" visible="false">
                        <DatePicker
                            id="idStartDate"
                            placeholder="Select Date"
                            class="sapUiSmallMarginBottom"
                            showFooter="false"
                            enabled="false"
                            width="15rem"
                            visible="false"
                        />
                    </InputListItem>
                    <InputListItem label="{i18n>StartTime}" visible="false">
                        <TimePicker
                            id="idStartTime"
                            placeholder="Select Time"
                            class="sapUiSmallMarginBottom"
                            enabled="false"
                            width="15rem"
                            displayFormat="HH:mm:ss"
                            visible="false"
                        />
                    </InputListItem>
                </List>
            </l:content>
        </l:VerticalLayout>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    type="Success"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Confirm}"
                    press="onConfirmStartPress"
                    visible="false"
                />
                <Button
                    icon="sap-icon://cancel"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Cancel}"
                    type="Negative"
                    press="onCancelStartPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
