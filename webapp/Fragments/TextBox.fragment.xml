<c:FragmentDefinition
    id="idTextBox"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <!-- contentHeight="30rem"
        contentWidth="30rem" -->
    <Dialog
        id="idDialogTextBox"
        resizable="false"
        draggable="false"
        state="Information"
        stretch="false"
        contentWidth="50%"
        contentHeight="33%"
        title="{i18n>OrderHeaderText}"
    >
        <content>
            <Text
                id="idHeaderOrder"
                visible="false"
                width="50rem"
            />
            <TextArea
                id="idHeaderText"
                showExceededText="false"
                rows="16"
                height="100%"
                width="100%"
                growing="false"
                growingMaxLines="15"
                maxLength="1000"
                valueLiveUpdate="false"
                liveChange="handleLiveChange"
            />
        </content>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    type="Success"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Save}"
                    press="onConfirmTextPress"
                />
                <Button
                    icon="sap-icon://cancel"
                    type="Negative"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Cancel}"
                    press="onCancelTextPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
