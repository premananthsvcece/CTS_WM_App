<c:FragmentDefinition
    id="idTextBox"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialogTextBox"
        resizable="false"
        draggable="false"
        state="Information"
        stretch="false"
        contentHeight="600px"
        contentWidth="550px"
        title="Order Header Text"
        titleAlignment="Center"
    >
        <content>
            <Text
                id="idHeaderOrder"
                visible="false"
            />
            <TextArea
                id="idHeaderText"
                showExceededText="true"
                width="525px"
                height="525px"
                growing="true"
                growingMaxLines="20"
                valueLiveUpdate="false"
                liveChange="handleLiveChange"
            />
        </content>
        <Bar>
            <contentMiddle>
                <Button
                    icon="sap-icon://accept"
                    type="Success"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Save}"
                    press="onConfirmTextPress"
                />
                <Button
                    icon="sap-icon://cancel"
                    class="sapUiSizeCompact sapUiSmallMarginBeginEnd sapUiSmallMarginTopBottom"
                    text="{i18n>Cancel}"
                    press="onCancelTextPress"
                />
            </contentMiddle>
        </Bar>
    </Dialog>
</c:FragmentDefinition>
