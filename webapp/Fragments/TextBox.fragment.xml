<c:FragmentDefinition
    id="idTextBox"
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:sf="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idDialogTextBox"
        resizable="false"
        draggable="false"
        state="Information"
        stretch="false"
		contentHeight="500px"
		contentWidth="500px"
		title="Order Header Text"
		titleAlignment="Center"
    >
            <content>
                <Text id="idHeaderOrder" visible="false"/>
                <TextArea
                    id="idHeaderText"
                    showExceededText="true"
                    width="450px"
					height="450px"
                    growing="true"
                    growingMaxLines="20"
                    valueLiveUpdate="false"
                    liveChange="handleLiveChange"
                />
            </content>
        <ToolbarSpacer />
        <Button
            icon="sap-icon://accept"
            text="{i18n>Save}"
            press="onConfirmTextPress"
        />
        <Button
            icon="sap-icon://cancel"
            text="{i18n>Cancel}"
            press="onCancelTextPress"
        />
    </Dialog>
</c:FragmentDefinition>
